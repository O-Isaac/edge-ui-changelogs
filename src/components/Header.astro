---
import '../styles/global.scss';
import { SiteTitle } from '../consts';
---

<header>
	<nav>
		<h2 id="site_title">
			<a href="/">
				<img width="24px" height="24px" src="https://beta-edge-ui-docs.vercel.app/_astro/logo.vCRi2JDX.webp" alt="Edge UI Logo">
				{SiteTitle}
			</a>
		</h2>
		<div class="links">
			<a href="https://beta-edge-ui-docs.vercel.app/">Blog</a>
		</div>
	</nav>
</header>

<style>
	nav, header {
		max-height: 70px;
	}

	header {
		isolation: isolate;
		background: #1111119a;
	}

	nav {
		padding: 1rem;
		width: 1024px;
		max-width: 100%;
		margin: 0 auto;
	}

	.links a {
		text-decoration: none;
	}
</style>
